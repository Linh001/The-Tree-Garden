<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>


<form method="post" action="/news/search">
    <div class="mb-3">

        <input type="text" class="form-control" id="search">

    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>




<body>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">stt</th>
                <th scope="col">name</th>
                <th scope="col">mo ta</th>
                <th scope="col">id</th>

            </tr>
        </thead>
        <tbody>
            {{#each course}}
            <tr>
                <th scope="row">{{sum @index 1 }}</th>
                <td>{{this.name}}</td>
                <td>{{this.mota}}</td>
                <td>{{this._id}}</td>
                <td><a type="button" href="/news/{{this._id}}/edit" class="btn btn-primary">Cap nhat</a>
                    <a type="button" href="/news/{{this._id}}/delete" class="btn btn-primary">Xoa</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

</body>

</html>